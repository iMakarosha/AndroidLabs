<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="6dp"
        app:srcCompat="@drawable/about" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Сервис взаимосвязи волонтеров и нуждающихся в помощи"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingTop="6dp"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Станьте волонтером"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="После регистрации у вас появится возможность приступать к волонтерской деятельности!"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingTop="6dp"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Подайте заявку на помощь"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Если вы нуждаетесь в помощи, оставьте заявку, и кто-нибудь обязательно откликнется и поможет вам!"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingTop="6dp"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Получайте уведомления"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Если Вы зарегистрировались как волонтер, Вы будете получать информацию о всех событиях на ваш email, где будут нуждаться в Вашей помощи. Если Вы оставили заявку на помощь, то получите уведомление, когда кто-нибудь откликнется на просьбу."
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

</LinearLayout>